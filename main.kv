<Calculator>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            size_hint: 1, 0.3
            id: input_box
            font_size: 50
            multiline: False
            readonly: True
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)
        GridLayout:
            cols: 4
            spacing: 10
            padding: 10
            Button:
                text: '7'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '8'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '9'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '+'
                font_size: 40
                on_press: root.add_operation(self.text)
                background_color: (1, 1, 1, 0.8)
                color: (85/255, 205/255, 100/255, 1)
            Button:
                text: '4'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '5'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '6'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '-'
                font_size: 40
                on_press: root.add_operation(self.text)
                background_color: (1, 1, 1, 0.8)
                color: (85/255, 205/255, 100/255, 1)
            Button:
                text: '1'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '2'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '3'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '*'
                font_size: 40
                on_press: root.add_operation(self.text)
                background_color: (1, 1, 1, 0.8)
                color: (85/255, 205/255, 100/255, 1)
            Button:
                text: '.'
                font_size: 40
                on_press: input_box.text += self.text if '.' not in input_box.text else ''
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '0'
                font_size: 30
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: u'\u00AB'
                font_size: 40
                on_press: root.delete_input()
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 85/255, 120/255, 1)
            Button:
                text: '/'
                font_size: 40
                on_press: root.add_operation(self.text)
                background_color: (1, 1, 1, 0.8)
                color: (85/255, 205/255, 100/255, 1)
        GridLayout:
            size_hint: 1, 0.5
            cols: 2
            spacing: 10
            padding: 10
            Button:
                text: 'C'
                font_size: 40
                on_press: root.clear_input()
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 85/255, 120/255, 1)
            Button:
                text: '='
                font_size: 40
                on_press: root.calculate()
                background_normal: ''
                background_color: (85/255, 205/255, 100/255, 1)
                color: (1, 1, 1 , 1)
