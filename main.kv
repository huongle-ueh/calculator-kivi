<Calculator>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: input_box
            font_size: 50
            multiline: False
            readonly: True
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)
        GridLayout:
            cols: 4
            spacing: 10
            padding: 10
            Button:
                text: '7'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '8'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '9'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '+'
                on_press: root.add_operation(self.text)
                background_color: (0.3, 0.3, 0.3, 1)
                color: (70/255, 200/255, 85/255, 1)
            Button:
                text: '4'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '5'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '6'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '-'
                on_press: root.add_operation(self.text)
                background_color: (0.3, 0.3, 0.3, 1)
                color: (70/255, 200/255, 85/255, 1)
            Button:
                text: '1'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '2'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '3'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '*'
                on_press: root.add_operation(self.text)
                background_color: (0.3, 0.3, 0.3, 1)
                color: (70/255, 200/255, 85/255, 1)
            Button:
                text: '.'
                on_press: input_box.text += self.text if '.' not in input_box.text else ''
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: '0'
                on_press: input_box.text += self.text
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
            Button:
                text: 'Del'
                on_press: root.delete_input()
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 85/255, 120/255, 1)
            Button:
                text: '/'
                on_press: root.add_operation(self.text)
                background_color: (0.3, 0.3, 0.3, 1)
                color: (70/255, 200/255, 85/255, 1)
        GridLayout:
            cols: 2
            spacing: 10
            padding: 10
            Button:
                text: 'C'
                on_press: root.clear_input()
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 85/255, 120/255, 1)
            Button:
                text: '='
                on_press: root.calculate()                
                background_color: (70/255, 200/255, 85/255, 1)
                color: (1, 1, 1 , 1)
