<Calculator>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: input_box
            font_size: 50
            multiline: False
            readonly: True
        GridLayout:
            cols: 4
            spacing: 10
            padding: 10
            Button:
                text: '7'
                on_press: input_box.text += self.text
            Button:
                text: '8'
                on_press: input_box.text += self.text
            Button:
                text: '9'
                on_press: input_box.text += self.text
            Button:
                text: '+'
                on_press: root.add_operation(self.text)
            Button:
                text: '4'
                on_press: input_box.text += self.text
            Button:
                text: '5'
                on_press: input_box.text += self.text
            Button:
                text: '6'
                on_press: input_box.text += self.text
            Button:
                text: '-'
                on_press: root.add_operation(self.text)
            Button:
                text: '1'
                on_press: input_box.text += self.text
            Button:
                text: '2'
                on_press: input_box.text += self.text
            Button:
                text: '3'
                on_press: input_box.text += self.text
            Button:
                text: '*'
                on_press: root.add_operation(self.text)
            Button:
                text: '.'
                on_press: input_box.text += self.text if '.' not in input_box.text else ''
            Button:
                text: '0'
                on_press: input_box.text += self.text
            Button:
                text: 'C'
                on_press: root.clear_input()
            Button:
                text: '/'
                on_press: root.add_operation(self.text)
        GridLayout:
            cols: 2
            spacing: 10
            padding: 10
            Button:
                text: 'DEL'
                on_press: root.delete_input()
            Button:
                text: '='
                on_press: root.calculate()
